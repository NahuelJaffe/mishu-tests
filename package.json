{
  "name": "mishu-tests",
  "version": "1.0.0",
  "description": "Automated QA tests for web application using Playwright.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:smoke": "playwright test tests/smoke-test.spec.js",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:ci": "playwright test --reporter=github",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:whatsapp": "playwright test tests/whatsapp/",
    "test:auth": "playwright test tests/whatsapp/auth.spec.js",
    "test:connection": "playwright test tests/whatsapp/connection.spec.js",
    "test:messages": "playwright test tests/whatsapp/message-monitoring.spec.js",
    "test:ui-tests": "playwright test tests/whatsapp/ui.spec.js",
    "test:dashboard": "playwright test tests/whatsapp/dashboard.spec.js",
    "test:security": "playwright test tests/whatsapp/security.spec.js",
    "test:signup": "playwright test tests/whatsapp/signup.spec.js",
    "test:high-priority": "node scripts/run-high-priority-tests.js",
    "trigger:high-priority": "./scripts/trigger-high-priority-workflow.sh",
    "test:profile": "playwright test tests/whatsapp/profile-settings.spec.js",
    "test:errors": "playwright test tests/whatsapp/error-handling.spec.js",
    "test:notifications": "playwright test tests/whatsapp/notifications.spec.js",
    "test:help": "playwright test tests/whatsapp/help-support.spec.js",
    "test:chat-image-preview": "playwright test tests/whatsapp/chat-image-preview.spec.js",
    "test:flagged-messages": "playwright test tests/whatsapp/flagged-messages.spec.js",
    "test:smoke-aligned": "playwright test tests/whatsapp/smoke-tests-aligned.spec.js",
    "test:analysis": "playwright test tests/whatsapp/connection-analysis.spec.js",
    "test:detailed": "playwright test tests/whatsapp/connection-detailed.spec.js",
    "test:exploration": "playwright test tests/whatsapp/login-exploration.spec.js",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:install-deps": "playwright install --with-deps",
    "test:codegen": "playwright codegen https://your-app.example.com/",
    "test:trace": "playwright show-trace",
    "test:clean": "rm -rf test-results playwright-report",
    "check:credentials": "node scripts/check-credentials.js",
    "monitor:ci": "node scripts/monitor-ci.js",
    "health:check": "node scripts/daily-health-check.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.55.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NahuelJaffe/mishu-tests.git"
  },
  "bugs": {
    "url": "https://github.com/NahuelJaffe/mishu-tests/issues"
  },
  "homepage": "https://github.com/NahuelJaffe/mishu-tests#readme"
}
